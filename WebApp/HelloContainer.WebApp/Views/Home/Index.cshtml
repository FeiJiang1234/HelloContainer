@model List<HelloContainer.WebApp.Services.ContainerDto>
@{
    ViewData["Title"] = "Containers";
}

<div class="row">
    <div class="col-md-6">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">Create New Container</a>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-10">
            <input type="text" name="searchKeyword" class="form-control" placeholder="Search containers..." value="@ViewBag.SearchKeyword" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Search</button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="row">
        @foreach (var container in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@container.Name</h5>
                        <p class="card-text">
                            <strong>Capacity:</strong> @container.Capacity L<br />
                            <strong>Current Volume:</strong> @container.CurrentVolume L<br />
                            <strong>Status:</strong> <span class="badge bg-@(container.Status == "Active" ? "success" : "secondary")">@container.Status</span>
                        </p>
                        <div class="progress mb-2">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: @((container.CurrentVolume / container.Capacity * 100).ToString("F1"))%" 
                                 aria-valuenow="@container.CurrentVolume" 
                                 aria-valuemin="0" 
                                 aria-valuemax="@container.Capacity">
                                @((container.CurrentVolume / container.Capacity * 100).ToString("F1"))%
                            </div>
                        </div>
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@container.Id" class="btn btn-outline-primary">Details</a>
                            <form asp-action="Delete" asp-route-id="@container.Id" method="post" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this container?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center mt-5">
        <h3>No containers found</h3>
        <p class="text-muted">Create your first container to get started.</p>
        <a asp-action="Create" class="btn btn-primary">Create Container</a>
    </div>
}

